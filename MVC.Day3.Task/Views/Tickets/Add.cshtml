@model TicketAddVM;

@{
    List<SelectListItem> departments = ViewData[Constants.Department] as List<SelectListItem> ?? new();
    List<SelectListItem> developers = ViewData[Constants.Developers] as List<SelectListItem> ?? new();
}

<form asp-action="Add" method="post">
    <div class="form-group mb-3">
        <label asp-for="CreatedDate"></label>
        <input asp-for="CreatedDate" class="form-control" />
        <span class="text-danger" asp-validation-for="CreatedDate"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Severity"></label>
        <select class="form-control" asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DepartmentId"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="departments"></select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DevelopersId"></label>
        <select class="form-control" asp-for="DevelopersId" asp-items="developers"></select>
        <span class="text-danger" asp-validation-for="DevelopersId"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsClosed" />
        <label class="form-check-label" asp-for="IsClosed"></label>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>